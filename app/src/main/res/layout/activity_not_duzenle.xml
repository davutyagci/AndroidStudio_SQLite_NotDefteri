<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_not_duzenle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.theghost.notdefteri.NotDuzenle">

    <EditText
        android:layout_width="352dp"
        android:layout_height="390dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/et_notduzenle"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="start" />

    <Button
        android:text="sil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_notduzenlesil"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_notduzenle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:onClick="BtNotSil"
        android:fontFamily="serif-monospace"
        style="@android:style/Widget.Button"
        android:layout_marginStart="96dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Notlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_notlargit"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_notduzenle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="96dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="BtNotlarGit"
        android:fontFamily="serif-monospace"
        style="@android:style/Widget.Button" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/tv_idgor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="invisible" />

    <TextView
        android:text="00.00.0000"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:id="@+id/tv_tarihduzenle"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:gravity="end" />
</android.support.constraint.ConstraintLayout>
