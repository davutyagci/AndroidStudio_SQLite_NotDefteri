<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_yeni_not_ekle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.theghost.notdefteri.YeniNotEkle">

    <EditText
        android:layout_width="352dp"
        android:layout_height="390dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/et_notyaz"
        android:gravity="start"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:text="Kaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_notkayit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_notyaz"
        android:layout_marginStart="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="BtNotKayit" />

    <Button
        android:text="Notlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_notlargit"
        android:layout_marginEnd="88dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_notyaz"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:onClick="BnNotlarGit" />
</android.support.constraint.ConstraintLayout>
